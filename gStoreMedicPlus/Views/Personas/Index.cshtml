@model IEnumerable<gStoreMedicPlus.Models.TbPersona>

@{
    ViewData["Title"] = "Pacientes";
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="d-none d-sm-inline-block">Pacientes</h1>

    <p class="d-none d-sm-inline-block">
        <a asp-action="Create" class="btn btn-outline-success">Crear</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre Paciente
            </th>
            <th>
                Dirección
            </th>
            <th>
                Teléfono
            </th>
@*            <th>
                Fecha de Creación
            </th>*@
            <th>
                DPI
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="40%">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td width="30%">
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a href="https://wa.me/@Html.DisplayFor(modelItem => item.Telefono1)">
                     @Html.DisplayFor(modelItem => item.Telefono1)
                </a>
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Dpi)
            </td>
            <td width="30%">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><li class="fa fa-edit"></li></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><li class="fa fa-eye"></li></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><li class="fa fa-trash"></li></a>
            </td>
        </tr>
}
    </tbody>
</table>
