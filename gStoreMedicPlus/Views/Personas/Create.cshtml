@model gStoreMedicPlus.Models.TbPersona

@{
    ViewData["Title"] = "Create";
    string fecha = DateTime.Now.ToString("g");
}

<h1>Crear</h1>

<h4>Personas</h4>
<hr />
<div class="col-md-8">
    <div>
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@ViewData["id"]" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Direccion" class="control-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefono1" class="control-label">Teléfono 1</label>
                    <input asp-for="Telefono1" class="form-control" />
                    <span asp-validation-for="Telefono1" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Telefono2" class="control-label">Teléfono 2</label>
                    <input asp-for="Telefono2" class="form-control" />
                    <span asp-validation-for="Telefono2" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Correo" class="control-label">Correo Electrónico</label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Dpi" class="control-label">DPI</label>
                    <input asp-for="Dpi" class="form-control" />
                    <span asp-validation-for="Dpi" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group" hidden>
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" value="1" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" value="1" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="TbUsuariosId" class="control-label"></label>
                <select asp-for="TbUsuariosId" class ="form-control" asp-items="ViewBag.TbUsuariosId">1</select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary"> <li class="fa fa-backward"></li> Listado de Personas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
