@model gStoreMedicPlus.Models.TbConsulta

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TbConsulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreado" class="control-label"></label>
                <input asp-for="FechaCreado" class="form-control" />
                <span asp-validation-for="FechaCreado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaModificado" class="control-label"></label>
                <input asp-for="FechaModificado" class="form-control" />
                <span asp-validation-for="FechaModificado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TbPersonasId" class="control-label"></label>
                <select asp-for="TbPersonasId" class="form-control" asp-items="ViewBag.TbPersonasId"></select>
                <span asp-validation-for="TbPersonasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TbUsuariosId" class="control-label"></label>
                <select asp-for="TbUsuariosId" class="form-control" asp-items="ViewBag.TbUsuariosId"></select>
                <span asp-validation-for="TbUsuariosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary"> <li class="fa fa-backward"></li> Listado de Consultas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
